#hero-banner
  %section
    %h1= t(:account_creation)

#new-session-new
  = form_for @form_helper, url: itps_party_accounts_path(@party) do |f|
    %fieldset
      = f.hidden_field :back, value: params[:back]
      %dl
        %dt= f.label :email, t(:login_email)
        %dd= @party.email
        %dt= f.label :password, t(:password)
        %dd= f.password_field :password
        %dt= f.label :password_confirmation, t(:password_confirmation)
        %dd= f.password_field :password_confirmation
      %article
        = render partial: 'itps/shared/errors', locals: { errors: @form_helper.errors }
        %h4
          It looks like you don't have an account with us yet. Please setup a password for your new account.
    %fieldset
      %article
        = button_tag type: :submit do
          %i.submit
          = t(:submit)
        = button_tag type: :reset do
          %i.reset
          = t(:cancel)