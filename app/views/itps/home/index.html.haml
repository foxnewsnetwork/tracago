      %figure
        %i.pricing
      %p
        = Faker::Lorem.paragraph(2)
      = link_to t(:see_details), itps_terms_path
    %li
      %h1= t(:accessibility)
      %figure
        %i.accessibility
      %p
        = Faker::Lorem.paragraph(2)
      = link_to t(:view_documentation), itps_documentation_path

