#hero-banner{ :class => "dog#{params[:c].to_i}" }
  %section.desktop
    %ul
      - 3.times do |i|
        %li= render 'itps/home/hero_box'
#mobile-banner
  %section
    %ul
      - if user_signed_in?
        %li
          = link_to itps_account_path(current_account) do
            %figure
              %i.account
            = t(:my_account)
        %li
          = link_to itps_party_escrows_path(current_account.party) do
            %figure
              %i.escrows
            = t(:my_escrows)
        %li
          = link_to new_itps_party_escrow_path(current_account.party) do
            %figure
              %i.new-escrow
            = t(:new_escrow)
      - else
        %li
          = link_to itps_login_path do
            %figure
              %i.login
            = t(:login)
        %li
          = link_to new_itps_escrow_path do
            %figure
              %i.new-escrow
            = t(:create_escrow)


