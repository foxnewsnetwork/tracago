#hero-banner
  %section
    %h1
      = t(:money_transfers)

#content-box
  #cookie-crumbs
    %ol
      %li= link_to t(:admin_profile), itps_admin_path(current_account)
      %li= link_to t(:money_transfers_index)
  #money-transfer-summary
    %h2= t(:financial_summary)
    %dl
      %dt= t(:total_bank_balance)
      %dd
        %i.dollar-sign
        = Itps::MoneyTransfer.bank_balance
      %dt= t(:unclaimed_balance)
      %dd
        %i.dollar-sign
        = Itps::MoneyTransfer.unclaimed_balance
    %dl
      %dt= t(:total_money_transfers)
      %dd= Itps::MoneyTransfer.count
      %dt= t(:unclaimed_transfers)
      %dd= Itps::MoneyTransfer.unclaimed.count
    %dl
      %dt= t(:claimed_amount)
      %dd
        %i.dollar-sign
        = Itps::MoneyTransfer.claimed_balance
      %dt= t(:claimed_transfers)
      %dd= Itps::MoneyTransfer.claimed.count
  #money-transfer-pages
    %h2= t(:money_transfers)
    - if @money_transfers.blank?
      %p= t(:nothing_here_yet)
    %ul
      = render partial: 'itps/admins/money_transfer', collection: @money_transfers
    = paginate @money_transfers