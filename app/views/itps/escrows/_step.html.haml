%li
  %article{ :class => step.status }
    = link_to itps_step_path(step.permalink) do
      %h4
        %i
        %span.colon
          = t(:step)
          = step.position
        = step.title
    = link_to swap_up_itps_step_path(step.permalink), method: :put do
      %figure
        %i.up
    = link_to swap_down_itps_step_path(step.permalink), method: :put do
      %figure
        %i.down
    = link_to itps_step_path(step.permalink), method: :delete do
      %figure
        %i.destroy
  %article
    %dl
      %dt= t(:status)
      %dd= t step.status
      %dt= t(:instructions)
      %dd= step.instructions
    %dl
      %dt= t(:required_documents)
      %dd= step.required_documents_presentation
    %dl
      %dt= t(:approved_documents)
      %dd= step.approved_documents_presentation
      %dt= t(:rejected_documents)
      %dd= step.rejected_documents_presentation