#hero-banner
  %section
    %h1= t(:you_require_an_account_to_continue)

.container
  #cookie-crumbs
    - if params[:back].present?
      %ol
        %li= link_to t(:go_back), params[:back]
        %li= t(:enforcing_signin)
  .choices.row
    .choice.col-lg-6.col-md-6.col-sm-6.col-xs-6
      = link_to itps_login_path(back: params[:back]), :class => 'btn btn-lg btn-block btn-primary' do
        %figure
          %i.fa-user
        = t(:login_to_existing_account)
    .choice.col-lg-6.col-md-6.col-sm-6.col-xs-6
      = link_to itps_signup_path(back: params[:back]), :class => 'btn btn-lg btn-block btn-info' do
        %figure
          %i.fa-edit
        = t(:create_a_new_account)